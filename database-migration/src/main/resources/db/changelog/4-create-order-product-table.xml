<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- 4. Create OrderProduct Table -->
    <changeSet id="4" author="nikhil">
        <createTable tableName="order_product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="order_reference_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_reference_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="order_product" baseColumnNames="order_reference_id"
                referencedTableName="order" referencedColumnNames="reference_id"
                onDelete="CASCADE" constraintName="fk_order_product_order_reference_id"/>
        <addForeignKeyConstraint
                baseTableName="order_product" baseColumnNames="product_reference_id"
                referencedTableName="product" referencedColumnNames="reference_id"
                onDelete="CASCADE" constraintName="fk_order_product_product_reference_id"/>

        <createIndex indexName="idx_order_product_order_reference_id" tableName="order_product">
            <column name="order_reference_id"/>
        </createIndex>
        <createIndex indexName="idx_order_product_product_id" tableName="order_product">
            <column name="product_reference_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>